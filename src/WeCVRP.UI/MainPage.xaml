<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:loc="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:Class="WeCVRP.UI.MainPage">
    <Grid RowSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Entry x:Name="placeSearchEntry" Grid.Column="0" Placeholder="Type place here" Completed="OnPlaceSearchEntryCompleted" HorizontalTextAlignment="Center"/>
            <Button x:Name="placeSearchButton" Grid.Column="1" Text="Search" Clicked="OnPlaceSearchEntryCompleted"/>
        </Grid>
        <maps:Map Grid.Row="1" x:Name="map" IsShowingUser="False" IsTrafficEnabled="False" MapType="Street"/>
    </Grid>

</ContentPage>
